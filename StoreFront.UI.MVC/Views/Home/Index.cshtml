@{
    ViewBag.Title = "Home";
}

<!-- Featured Product Banner -->
<section id="WelcomeBanner">
    <div class="d-flex align-items-center justify-content-center">
        <h1>Retro Tech</h1>
    </div>
</section>

<!-- Intro Hero -->
<section class="text-white text-center min-vw-100" id="IndexHero">
    <div class="container py-5">
        <h1 class="text-uppercase mt-5">Restored Vintage Technology</h1>
        @Html.ActionLink("About Us", "About", "Home", null, new { @class = "btn btn-primary btn-lg mt-3 mb-5" })
    </div>
</section>

<!-- Product Categories Section -->
<section class="py-5">
    <div class="container py-4">
        <div class="row gy-4">
            <div class="col-lg-4 col-md-6">
                <div class="text-center align-items-center category-icon-lg">
                    <a href="@Url.Action("Index", "Products")">
                        <img src="~/Content/img/music-icon.png" />
                    </a>
                    <a href="@Url.Action("Index", "Products")"><h4 class="text-uppercase mb-3">Sony Walkmans</h4></a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="text-center align-items-center category-icon-lg">
                    <a href="@Url.Action("Index", "Products")">
                        <img src="~/Content/img/videogames-icon.png" />
                    </a>
                    <a href="@Url.Action("Index", "Products")">
                        <h4 class="text-uppercase mb-3">NES CONSOLES &amp; CARTRIDGES</h4>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="text-center align-items-center category-icon-lg">
                    <a href="@Url.Action("Index", "Products")">
                        <img src="~/Content/img/gameboy-icon.png" />
                    </a>

                    <a href="@Url.Action("Index", "Products")">
                        <h4 class="text-uppercase mb-3">GAME BOYS &amp; CARTRIDGES</h4>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Product Hero -->
<section id="FeaturedProduct">
    <div class="row gy-3 py-5">
        <div class="col-lg-1 col-md-0"></div>
        <div class="col-lg-5 col-md-12 d-flex align-items-center">
            <div class="container py-3">
                <h3>Featured Product</h3>
                <h2>Sony TPS-L2</h2>
                <p>
                    When Sony released the TPS-L2 in 1979, it was the first portable music player to hit the market. Innovative. Iconic. Experience history with a durable restoration of this classic device.
                </p>
                @Html.ActionLink("PURCHASE", "Details", "Products", routeValues: new { id = 1 }, htmlAttributes: new { @class = "btn btn-outline-success text-white btn-lg" })
            </div>
        </div>
        <div class="col-lg-5 col-md-12 text-center py-3">
            <img src="~/Content/img/tps-l2-feature.jpg" class-="img-fluid" />
        </div>
        <div class="col-lg-1 col-md-0"></div>
    </div>
</section>

<!-- Register Banner -->
<div class="bg-primary py-3 text-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 p-3 text-left">
                <h3 class="text-uppercase mb-3">First time visitor?</h3>
                <a class="btn btn-outline-light" style="text-align: left;" href="@Url.Action("Register", "Account")">Register here</a>
            </div>
        </div>
    </div>
</div>