                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-md-end justify-content-between">
                            <ul class="list-inline mb-0">
                                @Html.Partial("_LoginPartial")
                                @if (Session["cart"] != null)
                                {
                                    <li class="list-inline-item mx-2">
                                        <a href="@Url.Action("Index", "ShoppingCart")" class="text-xs text-uppercase fw-bold text-reset text-decoration-none">
                                            <i class="fas fa-shopping-cart me-2"></i>
                                            <span class="d-none d-md-inline-block">Cart</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Top bar end-->
        <!-- Navbar Sticky-->
        <header class="nav-holder make-sticky">
            <div class="navbar navbar-light bg-white navbar-expand-lg py-0" id="navbar">
                <div class="container py-3 py-lg-0 px-lg-0">
                    <!-- Navbar brand--><a class="navbar-brand" href="@Url.Action("Index", "Home")"><img class="d-none d-md-inline-block" src="~/Content/img/logo.png" alt="Retro Tech logo" style="max-width: 187px;"><img class="d-inline-block d-md-none" src="~/Content/img/logo.png" alt="Retro Tech logo" style="max-width: 110px;"><span class="sr-only">Retro Tech - go to homepage</span></a>
                    <!-- Navbar toggler-->
                    <button class="navbar-toggler text-primary border-primary" type="button" data-bs-toggle="collapse" data-bs-target="#navigationCollapse" aria-controls="navigationCollapse" aria-expanded="false" aria-label="Toggle navigation"><span class="sr-only">Toggle navigation</span><i class="fas fa-align-justify"></i></button>
                    <!-- Collapsed Navigation -->
                    <div class="collapse navbar-collapse" id="navigationCollapse">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")" role="button">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("About", "Home")" role="button">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Products")" role="button">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Contact", "Home")" role="button">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

