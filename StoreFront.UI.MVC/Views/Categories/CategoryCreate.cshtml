@model StoreFront.Data.EF.Category

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "CategoryCreateForm" }))
{
    @Html.AntiForgeryToken()

<table class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <tr>
        <td class="form-group">
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Category" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </td>
        <td class="form-group">
            <div class="mx-2">
                <input type="submit" value="Create" class="btn btn-success btn-sm" />
            </div>
        </td>
    </tr>
</table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
